<taglib xmlns="http://java.sun.com/xml/ns/j2ee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-jsptaglibrary_2_0.xsd"
        version="2.0">

    <description>Cherry 1 core library</description>
    <display-name>Cherry core</display-name>
    <tlib-version>1.1</tlib-version>
    <short-name>ch</short-name>
    <uri>http://mhus.org/jsp/cherry/core_1</uri>

    <tag>
        <description>
        	Load important variables.
        </description>
        <name>load</name>
        <tag-class>de.mhus.cherry.renderer.jsp.tagext.LoadTagHandler</tag-class>
		<tei-class>de.mhus.cherry.renderer.jsp.tagext.LoadTagTei</tei-class>
        <body-content>JSP</body-content>
    </tag>

    <tag>
        <description>
        	Render a resource with script renderer.
        </description>
        <name>render</name>
        <tag-class>de.mhus.cherry.renderer.jsp.tagext.RenderTagHandler</tag-class>
        <body-content>JSP</body-content>
		<attribute>
            <description>
                Resource to render
            </description>
            <name>resource</name>
            <required>true</required>
            <rtexprvalue>true</rtexprvalue>
        </attribute>
    </tag>

    <tag>
        <description>
        	Iterate all children of the resource
        </description>
        <name>children</name>
        <tag-class>de.mhus.cherry.renderer.jsp.tagext.ChildrenTagHandler</tag-class>
        <tei-class>de.mhus.cherry.renderer.jsp.tagext.ChildrenTagTei</tei-class>
        <body-content>JSP</body-content>
		<attribute>
            <description>
                Parent resource
            </description>
            <name>resource</name>
            <required>true</required>
            <rtexprvalue>true</rtexprvalue>
        </attribute>
		<attribute>
            <description>
                Iterator name
            </description>
            <name>iterator</name>
            <required>true</required>
            <rtexprvalue>false</rtexprvalue>
        </attribute>
    </tag>

    <tag>
        <description>
        	Render body if editor mode is set.
        </description>
        <name>editor</name>
        <tag-class>de.mhus.cherry.renderer.jsp.tagext.EditorTagHandler</tag-class>
        <body-content>JSP</body-content>
    </tag>

    <tag>
        <description>
        	Render link to editor
        </description>
        <name>editorLink</name>
        <tag-class>de.mhus.cherry.renderer.jsp.tagext.EditorLinkTagHandler</tag-class>
        <body-content>JSP</body-content>
    </tag>
    
    <tag>
        <description>
        	Render needed html head content
        </description>
        <name>htmlHead</name>
        <tag-class>de.mhus.cherry.renderer.jsp.tagext.HtmlHeadTagHandler</tag-class>
        <body-content>JSP</body-content>
    </tag>
    
</taglib>